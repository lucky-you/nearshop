        <!--android:textColor="@color/white"-->
        <!--android:textSize="11.0sp"-->
        <!--android:visibility="gone" />-->
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white" />


</LinearLayout>