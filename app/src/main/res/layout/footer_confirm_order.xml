<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="支付方式"
        android:textSize="12.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_pay_alipay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:minHeight="44.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="支付宝"
                android:textSize="14.0sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|right"
                android:textSize="12.0sp" />

            <CheckBox
                style="@style/CustomCheckboxTheme"
                android:id="@+id/cb_pay_alipay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14.0dip"
                android:checked="true"
                android:clickable="false" />
        </LinearLayout>

        <View
            android:id="@+id/lineHongbao"
            style="@style/lineSolid"
            android:layout_marginLeft="10.0dip" />

        <LinearLayout
            android:id="@+id/ll_pay_weixin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:minHeight="44.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:text="微信"
                android:textSize="14.0sp" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center|right"
                android:textSize="12.0sp" />

            <CheckBox
                style="@style/CustomCheckboxTheme"
                android:id="@+id/cb_pay_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="14.0dip"
                android:clickable="false" />
        </LinearLayout>

        <!--<View-->
        <!--style="@style/lineSolid"-->
        <!--android:layout_marginLeft="10.0dip" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="结算信息"
        android:visibility="gone"
        android:textSize="12.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <View
            style="@style/lineSolid"
            android:layout_marginLeft="10.0dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="44.0dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8.0dip"
                android:text="钱包余额"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/tvLeftMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15.0dip"
                android:text="100"
                android:textColor="#ffff3933"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <View
            style="@style/lineSolid"
            android:layout_marginLeft="10.0dip" />


    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPayHint"
            android:text=""
            style="@style/TextViewCaption"/>

    </LinearLayout>


</LinearLayout>