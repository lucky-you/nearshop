<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relAddr"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp">

    <ImageView
        android:layout_marginRight="5dp"
        android:id="@+id/imgAddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_address" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgAddr"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvConsignee"
                style="@style/TextViewCaption"
                android:text="@string/address_consignee"
                android:textColor="@color/font_black" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tvPhone"
                style="@style/TextViewCaption"
                android:text="13056984561"
                android:textColor="@color/font_black" />


        </RelativeLayout>


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvAddress"
            style="@style/TextViewCaption"
            android:text="@string/address_detail"
            android:textColor="@color/font_black" />

        <TextView
            android:id="@+id/tvAddressDetail"
            style="@style/TextViewCaption"
            android:text="详细地址"
            android:textColor="@color/font_black" />

    </LinearLayout>

